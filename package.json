  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/alepop/ed25519-hd-key"
  },
  "bugs": {
    "url": "https://github.com/alepop/ed25519-hd-key/issues"
  },
